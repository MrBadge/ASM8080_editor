<doc>
	<brackets left="&lt;" right="&gt;" />

	<style name="Maroon" color="Maroon" />
	<style name="Blue" color="Blue"/>
	<style name="Red" color="Red" /> <!-- backColor="#f5f5e5" fontStyle="Bold,Italic" -->
	<style name="Green" color="Green" />
	<style name="BlueViolet" color="BlueViolet" />
	
	<rule style="Blue" options="IgnoreCase">\b(MOV|MVI|LXI|LDA|LHLD|LDAX|STA|SHLD|STAX|PUSH|POP|XTHL|IN|OUT)\b</rule> <!-- movements commands -->
	<rule style="Maroon" options="IgnoreCase">\b(ADD|ADI|ADC|ACI|SUB|SUI|SBB|SBI|ANA|ANI|ORA|ORI|XRA|XRI|CMP|CPI|INR|INX|DCR|DCX|DAD|RLC|RRC|RAL|RAR|CMA)\b</rule> <!-- arithmetic and logical commands  -->
	<rule style="BlueViolet" options="IgnoreCase">\b(JMP|CALL|PCHL|RET|NOP)\b|(J|R|C)</rule> <!-- conditional commands -->
	<rule style="Red" options="IgnoreCase">(NZ|NC|PO|P|Z|C|PE|M){1}\b</rule> <!-- conditions -->
	<rule style="Green" options="IgnoreCase">\b0x[0-9a-fA-F]+\b</rule> <!-- hex numbers -->
	<rule style="Green" options="IgnoreCase">;(.+)$</rule> <!-- comments -->
	<rule style="Green" options="IgnoreCase">\b(D|C|D|E|H|L|M|A|DC|DE|HL|AF|PSW)\b</rule> <!-- registers -->
	
	<rule style="Green" options="Singleline">(&lt;!--.*?--&gt;)|(&lt;!--.*)</rule>
	<rule style="Green" options="Singleline,RightToLeft">(&lt;!--.*?--&gt;)|(.*--&gt;)</rule>
	<rule style="Blue">&lt;|/&gt;|&lt;/|&gt;</rule>
	<rule style="Blue">&lt;|/&gt;|&lt;/|&gt;</rule>
	<rule style="Maroon">&lt;(?&lt;range&gt;[!\w\d]+)</rule>
	<rule style="Maroon">&lt;/(?&lt;range&gt;[\w\d]+)&gt;</rule>
	<rule style="Red" options="Multiline">(?&lt;range&gt;\S+?)='[^']*'|(?&lt;range&gt;\S+)="[^"]*"|(?&lt;range&gt;\S+)=\S+</rule>

	<folding start="&lt;div" finish="&lt;/div&gt;" options="IgnoreCase"/>
